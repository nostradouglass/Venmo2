<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kellydouglass.venmo2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Settings" android:parentActivityName=".MainActivity"/>
        <activity android:name=".GetHelp" android:parentActivityName=".MainActivity" />
        <activity android:name=".Purchases" android:parentActivityName=".MainActivity" />
        <activity android:name=".Incomplete"  android:parentActivityName=".MainActivity" />
        <activity android:name=".PaymentMethods" android:parentActivityName=".MainActivity"/>
        <activity android:name=".ScanCard" android:parentActivityName=".MainActivity" />
        <activity android:name=".VenmoCard" android:parentActivityName=".MainActivity" />
        <activity android:name=".SearchPeople"
            android:parentActivityName=".MainActivity"
            />
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>